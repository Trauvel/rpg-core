{
  "name": "rpg-platform",
  "version": "1.0.0",
  "description": "RPG Platform - микросервисная архитектура",
  "private": true,
  "workspaces": [
    "services/*",
    "shared"
  ],
  "scripts": {
    "dev:website": "cd services/website-api && npm run dev",
    "dev:game": "cd services/game-server && npm run dev",
    "dev": "concurrently \"npm run dev:website\" \"npm run dev:game\"",
    "install:all": "npm install && npm run install:website && npm run install:game && npm run install:shared",
    "install:website": "cd services/website-api && npm install",
    "install:game": "cd services/game-server && npm install",
    "install:shared": "cd shared && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tsconfig-paths": "^4.2.0"
  }
}
